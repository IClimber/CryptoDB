<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CryptoDataBase.Controls">

    <Style TargetType="{x:Type local:ImageView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ImageView">
                    <Grid>
                        <Image x:Name="PART_image" Stretch="Uniform"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
