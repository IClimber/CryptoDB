<Window x:Class="CryptoDataBase.PassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoDataBase"
        mc:Ignorable="d"
        Title="Password" Height="Auto" SizeToContent="Height"  Width="262.5" WindowStartupLocation="CenterOwner" Drop="KeyFile_Drop" AllowDrop="true"
		PreviewKeyDown="Window_PreviewKeyDown" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid Background="#FF222227" Height="100">
        <Label x:Name="label" Content="Enter your password" HorizontalAlignment="Left" Margin="20,10,20,0" VerticalAlignment="Top" Foreground="#FFD2FFCE"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Stretch" Password="" Height="23" Margin="10,30,10,0" VerticalAlignment="Top" KeyDown="passwordBox_KeyDown" />
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="30,10,0,10" VerticalAlignment="Bottom" Width="75" Click="buttonCancel_Click"/>
        <Button x:Name="buttonOk" Content="Ok" HorizontalAlignment="Right" Margin="0,10,30,10" VerticalAlignment="Bottom" Width="75" Click="buttonOk_Click"/>
	</Grid>
</Window>